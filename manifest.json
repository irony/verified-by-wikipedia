{
  "manifest_version": 2,
  "name": "Twitter Wikipedia Badge",
  "version": "1.1",
  "description": "Adds a white icon next to the username in Twitter for all accounts with a Wikipedia page.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon.svg",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "*://*.wikidata.org/*",
    "*://hub.toolforge.org/*"
  ],
  "web_accessible_resources": ["icon.svg"],
  "applications": {
    "gecko": {
      "id": "christian+twitter-badge@landgren.nu",
      "strict_min_version": "53.0"
    }
  }
}
